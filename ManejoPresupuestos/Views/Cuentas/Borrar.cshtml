@model CuentaViewModel
@{
    ViewData["Title"] = "Borrar Cuenta";
}

<div class="row">
    <div class="col-md-8  offset-md-2 by-10" id="BorrarCuenta">

        <div class="row" id="TituloBorrarCuenta">
            <h3 class="mb-3">¿Esta seguro de borrar la cuenta @Model.Nombre?</h3>
        </div>

        <div class="row" id="FormularioBorrarCuenta">
            <form asp-action="BorrarCuenta">
                <input type="hidden" asp-for="Id" />
                <button class="btn" type="submit" id="BorrarCuentaConfirmacion">Borrar</button>
                <a class="btn" asp-action="Index" id="CancelarBorrarCuenta">Cancelar</a>
            </form>
        </div>
    </div>
 </div>





