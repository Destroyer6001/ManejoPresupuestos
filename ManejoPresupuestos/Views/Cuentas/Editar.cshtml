@model CuentaCreacionViewModel
@{
    ViewData["Title"] = "Editar Cuenta";
}

<div class="row">
    <div class="col-md-8  offset-md-2 by-10" id="EditarCuenta">

        <div class="row" id="TituloEditarCuenta">
            <h1>Editar Cuenta: @Model.Nombre</h1>
        </div>
        
        <div class="row" id="FormularioEditarCuenta">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3" id="CampoNombreCrear">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb3" id="CampoTipoDeCuentaCrear">
                    <label asp-for="TipoCuentaID" class="form-label"></label>
                    <select asp-for="TipoCuentaID" asp-items="Model.TipoCuentaViewModel" class="form-select"></select>
                    <span asp-validation-for="TipoCuentaID" class="text-danger"></span>
                </div>

                <div class="mb-3" id="CampoBalanceCrear">
                    <label asp-for="Balance" class="form-label"></label>
                    <input asp-for="Balance" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>

                <div class="mb-3" id="CampoDescripcionCrear">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <button type="submit" class="btn" id="boton-EditarCuenta">Enviar</button>
                <a class="btn" asp-action="Index" id="boton-CancelarEditar">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}