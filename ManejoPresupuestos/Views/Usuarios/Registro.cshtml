@model RegistroViewModel
@{
    ViewData["Title"] = "Registro Usuarios";
}
<h1>Registrate</h1>
<dix class="card">
    <div class="card-body">
        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" id="CampoRegistroUsuarios" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" id="CampoRegistroUsuarios" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn-primary btn">Registrar</button>
            <a class="btn btn-success" asp-action="login">Deseo Loguarme</a>
        </form>
    </div>
</dix>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
